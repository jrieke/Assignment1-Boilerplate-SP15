{{> colored_navbar }}

<div class="container">

  <div class="section center-align">
    <h3>Your accounts</h3>
  </div>

  <div class="section">

    {{#if facebook}}
    <div class="row">
      <div class="col s12 m8 offset-m2 l6 offset-l3">
        {{> account_card logo='facebook' account=facebook}}
      </div>
    </div>
    {{/if}}

    {{#if instagram}}
    <div class="row">
      <div class="col s12 m8 offset-m2 l6 offset-l3">
        {{> account_card logo='instagram' account=instagram}}
      </div>
    </div>
    {{/if}}
  </div>


  <div class="row section hide-on-small-only">
    <div class="col s12 m8 offset-m2 l6 offset-l3 right-align">
      {{#unless facebook}}
      <a href="/auth/facebook" class="btn waves-effect blue">Connect Facebook</a>&nbsp;
      {{/unless}}
      {{#unless instagram}}
      <a href="/auth/instagram" class="btn waves-effect brown">Connect Instagram</a>&nbsp;
      {{/unless}}
      <a href="/disconnect" class="btn waves-effect red">Disconnect</a>
    </div>
  </div>

  <div class="hide-on-med-and-up center-align">
    {{#unless facebook}}
    <div class="section">
      <a href="/auth/facebook" class="btn waves-effect blue">Connect Facebook</a>
    </div>
    {{/unless}}
    {{#unless instagram}}
    <div class="section">
      <a href="/auth/instagram" class="btn waves-effect brown">Connect Instagram</a>
    </div>
    {{/unless}}
    <div class="section">
      <a href="/disconnect" class="btn waves-effect red">Disconnect</a>
    </div>
    
  </div>
  
</div>