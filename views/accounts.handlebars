          <p>Username: {{instagram_user.username}}</p>
          <p>Name: {{instagram_user.displayName}}</p>
          <p>ID: {{instagram_user.id}}</p>
          {{/if}}
        </div>
        <div class="card-action">
        {{#if instagram_user}}
          <a href="/logout" class="red-text">Disconnect</a>
        {{else}}
          <a href="/auth/instagram" class="light-green-text">Connect with Instagram</a>
        {{/if}}
        </div>
